    "typescript": "^4.3.4",
    "vue": "^2.6.14"
  },
  "dependencies": {},
  "lavamoat": {
    "allowScripts": {
      "core-js": false,
      "keccak": false,
      "secp256k1": false,
      "web3": false,
      "bufferutil": false,
      "utf-8-validate": false,
      "core-js-pure": false,
      "postinstall-postinstall": false,
      "husky": false
    }
  }
