{
    "name": "uad-contracts",
    "version": "1.0.0",
    "description": "Ubiquity Algorithmic Dollar",
    "scripts": {
        "postinstall": "typechain --target ethers-v5",
        "clean": "hardhat clean",
        "compile": "hardhat compile",
        "_compile": "TS_NODE_TRANSPILE_ONLY=1 hardhat compile",
        "test": "hardhat test",
        "test:coverage": "hardhat coverage",
        "prelint": "yarn compile",
        "lint": "run-p compile lint:*",
        "lint:sol": "solhint 'contracts/**/*.sol' --fix",
        "lint:eslint": "eslint . --ext .js,.ts --fix",
        "lint:prettier": "prettier --write ."
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ubiquity/uad-contracts.git"
    },
    "keywords": [
        "stablecoin",
        "erc20",
        "ethereum",
        "defi",
        "ubiquity",
        "dao",
        "dollar",
        "decentralization",
        "token",
        "algorithmic"
    ],
    "author": "Ubiquity DAO",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/ubiquity/uad-contracts/issues"
    },
    "homepage": "https://github.com/ubiquity/uad-contracts#readme",
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@eth-optimism/smock": "^0.2.1-alpha.0",
        "@ethereum-waffle/chai": "^3.3.1",
        "@ethereum-waffle/mock-contract": "^3.2.2",
        "@ethereum-waffle/provider": "^3.3.2",
        "@lavamoat/allow-scripts": "^1.0.6",
        "@nomiclabs/hardhat-ethers": "^2.0.2",
        "@nomiclabs/hardhat-etherscan": "^2.1.2",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@typechain/ethers-v5": "^6.0.5",
        "@types/big.js": "^6.1.0",
        "@types/dotenv": "^8.2.0",
        "@types/eslint": "^7.2.13",
        "@types/mocha": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "@uniswap/sdk": "^3.0.3",
        "abi-to-sol": "^0.2.1",
        "babel-eslint": "^10.1.0",
        "big.js": "^6.1.0",
        "chai": "^4.2.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.27.0",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "ethereum-waffle": "^3.2.2",
        "ethers": "^5.3.0",
        "hardhat": "^2.3.3",
        "hardhat-deploy": "^0.7.10",
        "hardhat-deploy-ethers": "^0.3.0-beta.7",
        "hardhat-gas-reporter": "^1.0.4",
        "hardhat-typechain": "^0.3.5",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "prettier-plugin-solidity": "^1.0.0-beta.10",
        "solhint": "^3.3.3",
        "solhint-plugin-prettier": "^0.0.5",
        "solidity-coverage": "^0.7.16",
        "ts-generator": "^0.1.1",
        "ts-node": "^9.1.1",
        "typechain": "^4.0.3",
        "typescript": "^4.3.2"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^4.1.0",
        "@uniswap/lib": "^4.0.1-alpha",
        "@uniswap/v2-periphery": "^1.1.0-beta.0",
        "solidity-linked-list": "^5.0.0"
    },
    "lavamoat": {
        "allowScripts": {
            "core-js": false,
            "keccak": false,
            "secp256k1": false,
            "web3": false,
            "bufferutil": false,
            "utf-8-validate": false,
            "core-js-pure": false,
            "postinstall-postinstall": false,
            "husky": false
        }
    }
}
