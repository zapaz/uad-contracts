{
  "name": "uad-contracts",
  "version": "1.0.0",
  "description": "Ubiquity Algorithmic Dollar",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "prelint": "yarn compile",
    "lint": "run-p compile lint:*",
    "lint:sol": "solhint 'contracts/**/*.sol' --fix",
    "lint:eslint": "eslint . --ext .ts --fix",
    "lint:prettier": "prettier --write .",
    "_typechain": "typechain --outDir artifacts/types --target ethers-v5",
    "_compile": "TS_NODE_TRANSPILE_ONLY=1 hardhat compile"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ubiquity/uad-contracts.git"
  },
  "keywords": [
    "stablecoin",
    "erc20",
    "ethereum",
    "defi",
    "ubiquity",
    "dao",
    "dollar",
    "decentralization",
    "token",
    "algorithmic"
  ],
  "author": "Ubiquity DAO",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ubiquity/uad-contracts/issues"
  },
  "homepage": "https://github.com/ubiquity/uad-contracts#readme",
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@commitlint/config-conventional": "^12.1.4",
    "@ethersproject/abi": "^5.4.0",
